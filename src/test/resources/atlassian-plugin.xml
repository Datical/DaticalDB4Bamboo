<atlassian-plugin key="com.datical.integration.bamboo" name="DaticalDB4Bamboo" plugins-version="2">
<!-- a short block describing the plugin itself -->
    <plugin-info>
        <description>This is a brief textual description of the plugin</description>
        <!-- the version of the plugin -->
        <version>1.1</version>
        <!-- the versions of the application this plugin is for -->
        <application-version min="5.5" max="5.5"/>
        <!-- details of the plugin vendor -->
        <vendor name="Datical" url="http://www.datical.com"/>
    </plugin-info>

    <!-- from our base plugin -->
    <component-import key="myComponent" interface="com.datical.integration.bamboo.MyPluginComponent"/>

    <!-- from the product container -->
    <component-import key="applicationProperties" interface="com.atlassian.sal.api.ApplicationProperties" />
    
</atlassian-plugin>


